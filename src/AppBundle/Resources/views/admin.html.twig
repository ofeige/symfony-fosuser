{% extends 'AppBundle::layout.html.twig' %}

{% import 'AppBundle::admin_macros.html.twig' as forms %}


{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Administration</h1>
        </div>
        <p>...</p>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>E-Mail</th>
                <th>isActive</th>
                <th>Role</th>
                <th></th>
            </tr>
            </thead>

            {% for data in table %}
                <tr>
                    <td>{{ data.id }}</td>
                    <td>{{ data.getUsername }}</td>
                    <td>{{ data.getEmail }}</td>
                    <td>{% if data.enabled == '1' %}<span class="label label-success">{{ 'active'|trans() }}</span>{% endif %}</td>
                    <td>
                        {% for value in data.roles %}
                            {% if value == 'ROLE_ADMIN' %}
                                <span class="label label-danger">admin</span>
                            {% elseif value == 'ROLE_USER' %}
                                <span class="label label-warning">user</span>
                            {% endif %}
                        {% endfor %}
                    <td style="text-align: right"><div class="btn-group btn-group-sm" role="group" aria-label="admin action">
                        {{ forms.promote(data.roles, data.id) }}
                        {{ forms.activate(data.enabled, data.id) }}
                    </div></td>
                </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}

{% block title %}
Administration Area
{% endblock %}

