{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" name="_username" type="text" required="required" value="{{ last_username }}" autofocus>
                                    {% if error %}
                                        <div>{{ error.messageKey|trans(error.messageData, 'FOSUserBundle') }}</div>
                                    {% endif %}

                                    {% for type, messages in app.session.flashBag.all %}
                                        {% for message in messages %}
                                            <div class="{{ type }}">
                                                {{ message|trans({}, 'FOSUserBundle') }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" name="_password" type="password" required="required" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" type="checkbox" value="on">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
